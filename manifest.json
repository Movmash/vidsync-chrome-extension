{
  "name": "Vidsync",
  "version": "0.1.0",
  "description": "Syncronize your video",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles/contentScript.css"],
      "js": [
        "libraries/socket.io.min.js",
        "contents/sync.js",
        "contents/utils.js",
        "contents/contentScript.js"
      ]
    }
  ],
  "action": {
    "default_title": "Vidsync",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/images/logo16px.png",
    "48": "assets/images/logo16px.png",
    "128": "assets/images/logo16px.png"
  },
  "manifest_version": 3
}
